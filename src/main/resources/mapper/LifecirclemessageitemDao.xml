<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jovines.lbs_server.dao.LifecirclemessageitemDao">

    <resultMap type="com.jovines.lbs_server.entity.Lifecirclemessageitem" id="LifecirclemessageitemMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="user" column="user" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="time" column="time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="LifecirclemessageitemMap">
        select
          id, user, title, content, time
        from lbs.lifecirclemessageitem
        where id = #{id}
    </select>


    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="LifecirclemessageitemMap">
        select
          id, user, title, content, time
        from lbs.lifecirclemessageitem
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="LifecirclemessageitemMap">
        select
          id, user, title, content, time
        from lbs.lifecirclemessageitem
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="user != null">
                and user = #{user}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="content != null and content != ''">
                and content = #{content}
            </if>
            <if test="time != null">
                and time = #{time}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into lbs.lifecirclemessageitem(user, title, content, time)
        values (#{user}, #{title}, #{content}, #{time})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update lbs.lifecirclemessageitem
        <set>
            <if test="user != null">
                user = #{user},
            </if>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from lbs.lifecirclemessageitem where id = #{id}
    </delete>

</mapper>