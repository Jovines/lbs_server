<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jovines.lbs_server.dao.ViewrecordsDao">

    <resultMap type="com.jovines.lbs_server.entity.Viewrecords" id="ViewrecordsMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="messageid" column="messageId" jdbcType="INTEGER"/>
        <result property="checkuser" column="checkUser" jdbcType="INTEGER"/>
        <result property="time" column="time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ViewrecordsMap">
        select
          id, messageId, checkUser, time
        from lbs.viewRecords
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ViewrecordsMap">
        select
          id, messageId, checkUser, time
        from lbs.viewRecords
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ViewrecordsMap">
        select
          id, messageId, checkUser, time
        from lbs.viewRecords
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="messageid != null">
                and messageId = #{messageid}
            </if>
            <if test="checkuser != null">
                and checkUser = #{checkuser}
            </if>
            <if test="time != null">
                and time = #{time}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into lbs.viewRecords(messageId, checkUser, time)
        values (#{messageid}, #{checkuser}, #{time})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update lbs.viewRecords
        <set>
            <if test="messageid != null">
                messageId = #{messageid},
            </if>
            <if test="checkuser != null">
                checkUser = #{checkuser},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from lbs.viewRecords where id = #{id}
    </delete>


    <select id="getNewsActiveUsers" resultType="java.lang.Long">
        select checkUser
        from viewRecords where time &gt; #{time} and messageId = #{messageId}
        group by checkUser
        order by count(checkUser) desc;
    </select>
</mapper>