<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jovines.lbs_server.dao.UserDao">

    <resultMap type="com.jovines.lbs_server.entity.User" id="UserMap">
        <result property="phone" column="phone" jdbcType="INTEGER"/>
        <result property="nickname" column="nickname" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="description" column="description" jdbcType="VARCHAR"/>
        <result property="avatar" column="avatar" jdbcType="VARCHAR"/>
        <result property="lng" column="lng" jdbcType="NUMERIC"/>
        <result property="lat" column="lat" jdbcType="NUMERIC"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserMap">
        select
          phone, nickname, password, description, avatar, lng, lat
        from lbs.user
        where phone = #{phone}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserMap">
        select
          phone, nickname, password, description, avatar, lng, lat
        from lbs.user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserMap">
        select
          phone, nickname, password, description, avatar, lng, lat
        from lbs.user
        <where>
            <if test="phone != null">
                and phone = #{phone}
            </if>
            <if test="nickname != null and nickname != ''">
                and nickname = #{nickname}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="description != null and description != ''">
                and description = #{description}
            </if>
            <if test="avatar != null and avatar != ''">
                and avatar = #{avatar}
            </if>
            <if test="lng != null">
                and lng = #{lng}
            </if>
            <if test="lat != null">
                and lat = #{lat}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="phone" useGeneratedKeys="true">
        insert into lbs.user(phone,nickname, password, description, avatar, lng, lat)
        values (#{phone},#{nickname}, #{password}, #{description}, #{avatar}, #{lng}, #{lat})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update lbs.user
        <set>
            <if test="nickname != null and nickname != ''">
                nickname = #{nickname},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="description != null and description != ''">
                description = #{description},
            </if>
            <if test="avatar != null and avatar != ''">
                avatar = #{avatar},
            </if>
            <if test="lng != null">
                lng = #{lng},
            </if>
            <if test="lat != null">
                lat = #{lat},
            </if>
        </set>
        where phone = #{phone}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from lbs.user where phone = #{phone}
    </delete>

</mapper>